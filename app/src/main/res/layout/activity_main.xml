<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="281dp"
        android:layout_height="164dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/nameinfoTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:layout_below="@+id/logo"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/emailinfoTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameinfoTxt"
        android:layout_marginRight="5dp"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/fb_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailinfoTxt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="#0D74F6"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="328dp"
        android:layout_height="37dp"
        android:layout_below="@+id/emailinfoTxt"
        android:layout_marginTop="60dp"
        android:background="#0D74F6"
        android:text="Continue with Facebook"
        android:textColor="#000000"
        app:backgroundTint="#0D74F6" />

    <com.google.android.gms.common.internal.SignInButtonImpl
        android:id="@+id/google_login"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_below="@+id/fb_login_button"
        android:layout_marginTop="30dp"
        android:background="#0D74F6"
        android:text="Continue WIth Google"
        android:textColor="#000000"
        android:textSize="15sp" />

</RelativeLayout>